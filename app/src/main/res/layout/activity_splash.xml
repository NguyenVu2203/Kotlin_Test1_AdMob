<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FD"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/android_app_icon"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Language Translator"
            android:textSize="18sp"
            android:textColor="#2F3ACF"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/adsNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This action may contain ads"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_above="@+id/progressBar"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:progress="0"
        android:max="100"
        android:progressTint="#2F3ACF"
        android:progressBackgroundTint="#DDDDDD"
        android:indeterminate="false"
        android:layout_marginBottom="24dp" />
</RelativeLayout>
